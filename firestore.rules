rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - allow authenticated users to read all users (for invites/search)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Server documents
    match /servers/{serverId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.members ||
        request.auth.uid == resource.data.ownerId
      );
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
    
    // Channel documents
    match /channels/{channelId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Message documents
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        exists(/databases/$(database)/documents/servers/$(get(/databases/$(database)/documents/channels/$(resource.data.channelId)).data.serverId)) &&
        get(/databases/$(database)/documents/servers/$(get(/databases/$(database)/documents/channels/$(resource.data.channelId)).data.serverId)).data.ownerId == request.auth.uid
      );
    }

    // Scheduled messages - users can manage their own schedules
    match /scheduledMessages/{scheduleId} {
      allow read, update, delete: if request.auth != null &&
        request.auth.uid == resource.data.authorId;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.authorId;
    }

    // Collaborative channel notes
    match /channelNotes/{channelId} {
      allow read, write: if request.auth != null;
    }

    // Join requests
    match /joinRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}
